{
  "name": "alive-data",
  "version": "1.0.0",
  "description": "ALIVE Data - Screen capture and command recording tool",
  "main": "src/main/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:vite\" \"wait-on http://localhost:5173 && npm run dev:electron\"",
    "dev:vite": "cross-env NODE_ENV=development vite",
    "dev:electron": "cross-env NODE_ENV=development ELECTRON_ENABLE_LOGGING=0 electron .",
    "build": "vite build && cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder",
    "build:vite": "vite build",
    "build:electron": "cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder",
    "rebuild": "electron-rebuild",
    "postinstall": "echo Skipping native module rebuild - will use prebuilt or fallback",
    "start": "electron .",
    "server": "node server.js",
    "dev:server": "nodemon server.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "electron",
    "screen-capture",
    "ocr"
  ],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@electron-forge/cli": "^7.10.2",
    "@types/node": "^24.10.0",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@vitejs/plugin-react": "^5.1.0",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.1.1",
    "electron-builder": "^26.0.12",
    "electron-forge": "^5.2.4",
    "electron-rebuild": "^3.2.9",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "typescript": "^5.9.3",
    "vite": "^7.2.2",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.alivedata.app",
    "productName": "ALIVE Data",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "npmRebuild": false,
    "nodeGypRebuild": false,
    "files": [
      "src/main/**/*",
      "src/preload/**/*",
      "dist/renderer/**/*",
      "package.json",
      "!server.js",
      "!**/*.md",
      "!**/node_modules/**/*"
    ],
    "extraFiles": [
      {
        "from": "node_modules/tesseract.js-core",
        "to": "tesseract.js-core",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico",
      "artifactName": "${productName}-${version}-${arch}.${ext}",
      "forceCodeSigning": false
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "build/icon.icns",
      "category": "public.app-category.utilities"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.png",
      "category": "Utility"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "compression": "normal",
    "asar": true,
    "asarUnpack": [
      "node_modules/tesseract.js-core/**/*"
    ]
  },
  "dependencies": {
    "@workos-inc/authkit-react": "^0.13.0",
    "@workos-inc/node": "^7.72.2",
    "convex": "^1.28.2",
    "dotenv": "^17.2.3",
    "electron-store": "^11.0.2",
    "screenshot-desktop": "^1.15.3",
    "systeminformation": "^5.27.11",
    "tesseract.js": "^6.0.1"
  }
}
